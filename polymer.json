{
  "entrypoint": "index.html",
  "shell": "src/my-app.js",
  "sources": ["images/**/*", "images/favicon-16x16.png", "images/favicon-32x32.png", "images/favicon-96x96.png"],
  "extraDependencies": ["manifest.json", "node_modules/@webcomponents/webcomponentsjs/**", "node_modules/dayjs/dayjs.min.js"],
  "builds": [
    {
      "name": "esm-bundled",
      "browserCapabilities": ["es2015", "modules"],
      "js": {
        "minify": true
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      },
      "bundle": true,
      "addServiceWorker": true,
      "addPushManifest": true
    },
    {
      "name": "es6-bundled",
      "preset": "es6-bundled"
    }
  ],
  "moduleResolution": "node",
  "npm": true
}
